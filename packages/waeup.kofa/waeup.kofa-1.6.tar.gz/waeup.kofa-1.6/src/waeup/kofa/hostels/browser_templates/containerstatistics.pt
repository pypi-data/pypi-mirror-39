<tal:statistics define="stats context/statistics" i18n:domain="waeup.kofa">
  <table class="table">
    <thead>
      <tr>
        <th i18n:translate="" width="40%">Bed Type</th>
        <th i18n:translate="">Occupied</th>
        <th i18n:translate="">Free</th>
        <th i18n:translate="">Total</th>
      </tr>
    </thead>
    <tbody>
      <tr tal:repeat="bed_type python:sorted(stats.keys())">
        <td tal:content="bed_type">TYPE</td>
        <td style="width: 100px;" tal:content="python: stats[bed_type][0]">OCCUPIED</td>
        <td style="width: 100px;" tal:content="python: stats[bed_type][1]">FREE</td>
        <td style="width: 100px;" tal:content="python: stats[bed_type][2]">TOTAL</td>
      </tr>
    </tbody>
  </table>
</tal:statistics>
