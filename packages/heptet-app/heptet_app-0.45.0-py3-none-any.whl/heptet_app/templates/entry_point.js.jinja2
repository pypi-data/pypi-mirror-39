{% for ready_stmt in ready_stmts %}
{{ ready_stmt }}
{% endfor %}
});

{% block js_imports_block %}
{% for import_str in js_imports %}
import {{ import_str }};
{% endfor %}
{% endblock js_imports_block %}
{% block js_statements %}
{% for statement in js_stmts %}
{{ statement }}
{% endfor %}
{% endblock js_statements %}
