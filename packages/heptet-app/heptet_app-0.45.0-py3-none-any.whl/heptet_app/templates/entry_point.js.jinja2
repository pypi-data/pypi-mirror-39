        js_imports    array of strings to supply to import statement.
                      e.g. 'bootstrap' (with quotes) or 'jQuery from "jquery"'
                      (without the single quotes, but with double quotes.)
        js_stmts      array of javascript statements to place in the entry point.
                      statements must include terminating ; characters
#}
import jQuery from "jquery";
window.$ = window.jQuery = jQuery;
import 'popper.js';
import 'bootstrap';
import 'bootstrap/dist/css/bootstrap.min.css';

jQuery(document).ready(function() {
